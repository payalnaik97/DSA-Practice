package com.dsa.practice;

public class ArrayDS {
	public int[] arrayDemo() {
	  int[] myArray=new int[5];	
	  myArray[0]=1;
	  myArray[1]=2;
	  myArray[2]=3;
	  myArray[3]=4;
	  myArray[4]=5;
	  printArray(myArray);
	  return myArray;
	}
	
	public void printArray(int[] array) {
		for(int i=0; i<array.length;i++)
			System.out.print(array[i] + " ");
	}	
	
   public int[] removeEvenIntegerFromArray(int[] arr) {
	   int oddCount=0;	   
	   for(int i=0; i<arr.length; i++) {
		   if(arr[i]%2 != 0) 		  
			 oddCount++ ;
	   }
	   int[] resultArr=new int[oddCount];
	   int index=0;
	   for(int i=0; i<arr.length; i++) {
		   if(arr[i]%2 != 0) 	
		   {
			 resultArr[index]=arr[i];
			 index++;
		   }
	   }
	   return resultArr;
   }
	
   public void reverseArray(int[] arr, int start , int end) {
	  while(start < end)
	   {
		   int temp=arr[start];
		   arr[start]=arr[end];
		   arr[end]=temp;
           start++;
           end--;
	   }
   }
   
   public int minimumValue(int[] arr) {
	   if(arr==null ||arr.length==0) 
	   {
		 System.out.println("\n\nArray is empty");   
		 throw new IllegalArgumentException("Invalid input");
	   }
	   int min=arr[0];	  
	   for(int i=1; i<arr.length; i++) {
		   if(arr[i]<min)
		   {
			   min=arr[i];
		   }
	   }
	   return min;
   }
   
   public int secondMaxNumber(int[] arr) {
	   if(arr==null ||arr.length<=0) 
	   {		
		 throw new IllegalArgumentException("Invalid input");
	   }
	   
	   int max=Integer.MIN_VALUE;  //-2147483648
	   int secondMax=Integer.MIN_VALUE; //-2147483648
	   for(int i=0; i<arr.length; i++) 
	   {
		   //checking wheather arr[i] greater than max
		   if(arr[i] > max)
           {
			 secondMax=max;
			 max=arr[i];
		   } 
		   
		   //checking secondMax value with arr[i] and arr[i] not equal to max 
		   //i.e duplication vale we are checking here to change secondMax value
		   else if(secondMax < arr[i] && max!=arr[i]) 
		   {
			   secondMax=arr[i];
		   }
	   }	   
	   
	   return secondMax;
   }
   
   public int[] moveZeroToEnd(int[] arr) {
	//{2,3,0,4,8,0}
	   int length=arr.length;
	   int j=0;  //j focus on zero element & i focus on non zero element
	   for(int i=0; i<length; i++)
	   {
		   if(arr[i]!=0 && arr[j]==0) 
		   {
			   int temp=arr[i];
			   arr[i]=arr[j];
			   arr[j]=temp;
			
		   }
		   if(arr[j]!=0)
		   {
			   j++;
		   }
		   
	   }
	   return arr;
  }
   
 public int[] resizeArray(int[] arr, int capacity) {
	int[] temp=new int[capacity];
	for(int i=0; i<arr.length; i++)
	{
		temp[i]=arr[i];
	} 
	 arr=temp;	 
	 return arr;	 
 }  
 
 public int findMissingNumber(int[] arr) {
	 int n=arr.length+1;
	 int sum=n*(n+1)/2;
	 for(int num:arr)
	 {
		 sum=sum-num;
	 }
	return sum;	
	}

   
	public static void main(String[] args) {
		ArrayDS ads=new ArrayDS();
		System.out.println("Your array is");
		ads.arrayDemo();
		
		//to remove even numbers for array
		int[] oddArray=ads.removeEvenIntegerFromArray(new int[] {4,6,1,4,3,1,9,7,9});
		System.out.println("\n\nOdd array is");
		ads.printArray(oddArray);
		
		//to reverse array and store data in same aaray
		int[] numbers=ads.arrayDemo();
		System.out.println("\n\nBefore reversing");
		ads.printArray(numbers);
		ads.reverseArray(numbers, 0, numbers.length-1);
		System.out.println("\nAfter reversing");
		ads.printArray(numbers);
		
		//to find minimum value in array
		int minNum=ads.minimumValue(new int[] {9,4,9,2,6,7,5,3,1,0});
		System.out.println("\n\nMinimum number in given array is  "+minNum);
		
		//to find 2nd max value in array
		int secondMax=ads.secondMaxNumber(new int[] {2,4,7,1,9,4,6,8,2,9,8});
		System.out.println("\n\n2nd Max number in given array is  "+secondMax);
		
		//to move zero to end of array
		int[] newArray=ads.moveZeroToEnd(new int[] {0,0,9,0,6,0,5,3,1,0});
		System.out.println("\n\nMove Zero at end of array ");
		ads.printArray(newArray);
		
		//to resize array to new capacity
		int[] oldArr=new int[] {1,2,3,4};
		System.out.println("\n\nSize of original array before resize "+oldArr.length);
		int[] resizeArray=ads.resizeArray(oldArr, oldArr.length*2);
		System.out.println("Resize Array size "+resizeArray.length);
		ads.printArray(resizeArray);
		
		//to find missing number in array between 1-9
		System.out.println("\n\nMissing number in given array is "+ads.findMissingNumber(new int[] {1,3,6,2,7,5,8,9}));
	}

	
}
